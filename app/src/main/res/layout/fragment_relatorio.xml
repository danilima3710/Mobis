<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telaPrincipal.ui.Viagem.TelaViagem"
    tools:ignore="MissingDefaultResource">

    <EditText
        android:id="@+id/txtDataInicial"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Data inicial"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"></EditText>

    <EditText
        android:id="@+id/txtDataFinal"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Data final"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/txtDataInicial"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFiltrar"
        style="@style/buttom_finalizar_viagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Filtrar"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDataFinal"
        tools:ignore="MissingConstraints" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btnFiltrar"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/button_exit" />


</androidx.constraintlayout.widget.ConstraintLayout>