<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".telaPrincipal.ui.Viagem.TelaViagem"
    tools:ignore="MissingDefaultResource">

    <EditText
        android:id="@+id/txt_data_consulta"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:hint="Data e hora"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:inputType="number"
        tools:layout_editor_absoluteX="40dp"></EditText>

    <EditText
        android:id="@+id/txt_endereco_origem_consulta"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Origem"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_data_consulta"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="40dp"></EditText>

    <EditText
        android:id="@+id/txt_endereco_destino_consulta"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Destino"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_endereco_origem_consulta"
        tools:ignore="MissingConstraints"></EditText>

    <EditText
        android:id="@+id/txt_valor_passageiro_consulta"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Preço por passageiro"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_endereco_destino_consulta"
        android:inputType="number"
        tools:ignore="MissingConstraints"></EditText>

    <AutoCompleteTextView
        android:id="@+id/autoCompleteNomePassageiro_consulta"
        android:hint="Selecione um passageiro"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/txt_valor_passageiro_consulta"
        app:layout_constraintEnd_toEndOf="@+id/txt_valor_passageiro_consulta"
        app:layout_constraintTop_toBottomOf="@+id/txt_valor_passageiro_consulta"
        android:background="@drawable/border_spinner"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textPassageiro_consulta"
        android:layout_width="141dp"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:text="Adicionar Passageiro"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/autoCompleteNomePassageiro_consulta"
        app:layout_constraintEnd_toEndOf="@+id/autoCompleteNomePassageiro_consulta"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_passageiro_consulta"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/txt_endereco_destino_consulta"
        app:layout_constraintTop_toBottomOf="@+id/textPassageiro_consulta"
        app:layout_constraintEnd_toEndOf="@+id/txt_endereco_destino_consulta"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txt_observacao_consulta"
        style="@style/edit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Observação"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintStart_toStartOf="@+id/textPassageiro_consulta"
        app:layout_constraintEnd_toEndOf="@+id/textPassageiro_consulta"
        app:layout_constraintTop_toBottomOf="@+id/rcv_passageiro_consulta"
        tools:ignore="MissingConstraints"></EditText>

    <TextView
        android:id="@+id/textAdicionarObservacao_consulta"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="15sp"
        android:text="Adicionar Observação"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_observacao_consulta"
        app:layout_constraintEnd_toEndOf="@+id/autoCompleteNomePassageiro_consulta"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_observacao_consulta"
        android:layout_height="wrap_content"
        android:layout_width="331dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/txt_endereco_destino_consulta"
        app:layout_constraintEnd_toEndOf="@+id/txt_endereco_destino_consulta"
        app:layout_constraintTop_toBottomOf="@+id/textAdicionarObservacao_consulta"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_editar_viagem"
        style="@style/button_editar_remover"
        android:text="Alterar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/rcv_observacao_consulta"
        app:layout_constraintStart_toStartOf="@+id/txt_valor_passageiro_consulta"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_remover_viagem"
        style="@style/button_editar_remover"
        android:text="Remover"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/txt_data_consulta"
        app:layout_constraintTop_toBottomOf="@+id/rcv_observacao_consulta"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_finalizar_viagem"
        style="@style/buttom_finalizar_viagem"
        android:text="Finalizar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/button_remover_viagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        tools:ignore="MissingConstraints"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>